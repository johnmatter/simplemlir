{
    "passes": [
        {
            "name": "mlir-opt",
            "command": "mlir-opt",
            "args": [
                "--pass-pipeline='builtin.module(func.func(tosa-to-linalg-named, tosa-to-tensor, convert-linalg-to-affine-loops))'"
            ]
        },
        {
            "name": "heir-opt secretize",
            "command": "bazel run",
            "args": [
                "--action_env=CC=$(which gcc)",
                "//tools:heir-opt --",
                "--secretize",
                "--wrap-generic"
            ]
        },
        {
            "name": "heir-opt to openfhe-bgv",
            "command": "bazel run",
            "args": [
                "--action_env=CC=$(which gcc)",
                "//tools:heir-opt --",
                "--secret-to-bgv"
            ]
        }
    ]
}
